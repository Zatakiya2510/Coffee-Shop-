@model DataTable
@using System.Data

<main id="main" class="main">
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="card-title">Customer Detail</h5>
                <button class="btn btn-primary">
                    <a class="text-white" asp-controller="Customer" asp-action="CustomerForm">
                        <i class="bi bi-plus"></i><span>Add Customer</span>
                    </a>
                </button>
                <button class="btn btn-success ms-2">
                    <a class="text-white" asp-controller="Customer" asp-action="ExportToExcel">
                        <i class="bi bi-file-earmark-excel"></i><span>Export to Excel</span>
                    </a>
                </button>
            </div>

            <h6 class="text-danger">@TempData["ErrorMessage"]</h6>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">CustomerID</th>
                        <th scope="col">CustomerName</th>
                        <th scope="col">HomeAddress</th>
                        <th scope="col">Email</th>
                        <th scope="col">MobileNo</th>
                        <th scope="col">GST NO</th>
                        <th scope="col">CityName</th>
                        <th scope="col">PinCode</th>
                        <th scope="col">NetAmount</th>
                        <th scope="col">UserID</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (DataRow dataRow in Model.Rows)
                    {
                        <tr>
                            <th scope="row">@dataRow["CustomerID"]</th>
                            <td>@dataRow["CustomerName"]</td>
                            <td>@dataRow["HomeAddress"]</td>
                            <td>@dataRow["Email"]</td>
                            <td>@dataRow["MobileNo"]</td>
                            <td>@dataRow["GST_NO"]</td>
                            <td>@dataRow["CityName"]</td>
                            <td>@dataRow["PinCode"]</td>
                            <td>@dataRow["NetAmount"]</td>
                            <td>@dataRow["UserName"]</td>
                            <td>
                                <div class="d-flex align-items-stretch">
                                    <!-- Delete Button -->
                                    <button class="btn" onclick="confirmDelete('@dataRow["CustomerID"]')">
                                        <i class="fas fa-trash-alt" style="color: red;"></i>
                                    </button>
                                    <!-- Edit Button -->
                                    <a asp-controller="Customer" asp-action="CustomerForm" asp-route-CustomerID="@dataRow["CustomerID"]">
                                        <button class="btn">
                                            <i class="fas fa-edit" style="color: greenyellow;"></i>
                                        </button>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</main>

<script>
    function confirmDelete(customerId) {
        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                // Perform AJAX POST request to delete the customer
                $.ajax({
                    url: '/Customer/CustomerDelete',
                    type: 'POST',
                    data: { CustomerID: customerId },
                    success: function () {
                        Swal.fire(
                            'Deleted!',
                            'The customer has been deleted.',
                            'success'
                        ).then(() => {
                            location.reload(); // Reload the page after success
                        });
                    },
                    error: function () {
                        Swal.fire(
                            'Error!',
                            'There was a problem deleting the customer.',
                            'error'
                        );
                    }
                });
            }
        });
    }
</script>
