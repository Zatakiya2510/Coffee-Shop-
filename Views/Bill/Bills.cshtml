@model DataTable
@using System.Data


<main id="main" class="main">
    <div class="card">
        <div class="card-body">

            <div class="d-flex justify-content-between align-items-center">
                <h5 class="card-title">Bill Detail</h5>
                <button class="btn btn-primary">
                    <a class="text-white" asp-controller="Bill" asp-action="BillsForm">
                        <i class="bi bi-plus"></i><span>Add Bills</span>
                    </a>
                </button>
                <button class="btn btn-success">
                    <a class="text-white" asp-controller="Bill" asp-action="ExportToExcel">
                        <i class="bi bi-file-earmark-excel"></i><span>Export to Excel</span>
                    </a>
                </button>
            </div>

            <h6 class="text-danger">@TempData["ErrorMessage"]</h6>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">BillID</th>
                        <th scope="col">BillNumber</th>
                        <th scope="col">BillDate</th>
                        <th scope="col">OrderID</th>
                        <th scope="col">TotalAmount</th>
                        <th scope="col">Discount</th>
                        <th scope="col">NetAmount</th>
                        <th scope="col">UserID</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (DataRow dataRow in Model.Rows)
                    {
                        <tr>
                            <th scope="row">@dataRow["BillID"]</th>
                            <td>@dataRow["BillNumber"]</td>
                            <td>@dataRow["BillDate"]</td>
                            <td>@dataRow["OrderCode"]</td>
                            <td>@dataRow["TotalAmount"]</td>
                            <td>@dataRow["Discount"]</td>
                            <td>@dataRow["NetAmount"]</td>
                            <td>@dataRow["UserName"]</td>
                            <td>
                                <div class="d-flex align-items-stretch">
                                    <button class="btn" onclick="confirmDelete(@dataRow["BillID"])">
                                        <i class="fas fa-trash-alt" style="color: red;"></i>
                                    </button>
                                    <a asp-controller="Bill" asp-action="BillsForm" asp-route-BillID="@Convert.ToInt32(@dataRow["BillID"])" title="Edit">
                                        <button class="btn">
                                            <i class="fas fa-edit" style="color: greenyellow;"></i>
                                        </button>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</main>

<script>
    function confirmDelete(billID) {
        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                // Submit the form via AJAX or a redirect
                window.location.href = '@Url.Action("BillDelete", "Bill")?BillID=' + billID;
            }
        })
    }
</script>

